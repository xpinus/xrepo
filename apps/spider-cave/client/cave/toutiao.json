{
  "$schema": "http://127.0.0.1:6001/schema/spider.schema.json",
  "website": "https://www.toutiao.com/",
  "meta": {
    "name": "今日头条",
    "lang": "zh-CN",
    "country": "中国"
  },
  "routes": [
    {
      "path": "/",
      "selectors": [
        {
          "label": ["热榜"],
          "selector": ".ttp-hot-board ol li a",
          "fields": [
            {
              "name": "title",
              "selector": ".news-title",
              "type": "text"
            },
            {
              "name": "link",
              "selector": "",
              "type": "attr",
              "attributeName": "href"
            },
            {
              "name": "content",
              "selector": ".article-content",
              "type": "text"
            }
          ],
          "limit": 10
        }
      ],
      "wait": {
        "target": ".ttp-hot-board ol",
        "timeout": 10000
      }
    }
  ]
}