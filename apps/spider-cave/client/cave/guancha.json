{
  "$schema": "http://127.0.0.1:6001/schema/spider.schema.json",
  "website": "https://www.guancha.cn/",
  "meta": {
    "name": "观察者网",
    "lang": "zh-CN",
    "country": "中国"
  },
  "routes": [
    {
      "path": "/internation",
      "selectors": [
        {
          "label": ["国际"],
          "selector": ".new-header-list h4 a",
          "fields": [
            {
              "name": "title",
              "selector": "",
              "type": "text"
            },
            {
              "name": "link",
              "selector": "",
              "type": "attr",
              "attributeName": "href"
            },
            {
              "name": "content",
              "selector": ".main .content",
              "type": "text"
            }
          ],
          "limit": 3
        }
      ]
    }
  ]
}