{
  "$schema": "http://127.0.0.1:6001/schema/spider.schema.json",
  "website": "https://www.thepaper.cn/",
  "meta": {
    "org": "澎湃新闻",
    "lang": "zh-CN",
    "country": "中国"
  },
  "routes": [
    {
      "path": "/",
      "selectors": [
        {
          "label": ["热榜"],
          "selector": "ul li .mdCard a",
          "fields": [
            {
              "name": "title",
              "selector": "",
              "type": "text"
            },
            {
              "name": "link",
              "selector": "",
              "type": "attr",
              "attributeName": "href"
            },
            {
              "name": "content",
              "selector": "div[class^=\"index_cententWrap\"]",
              "type": "text"
            }
          ],
          "limit": 5
        }
      ]

    },
    {
      "path": "/channel_122908",
      "selectors": {
        "label": ["国际"],
        "selector": ".ant-row .ant-card-body div[class^=\"toplink\"] a",
        "fields": [
          {
            "name": "title",
            "selector": "h2",
            "type": "text"
          },
          {
            "name": "link",
            "selector": "",
            "type": "attr",
            "attributeName": "href"
          },
          {
            "name": "content",
            "selector": "div[class^=\"cententWrap\"]",
            "type": "text"
          }
        ],
        "limit": 5
      }
    }
  ]
}